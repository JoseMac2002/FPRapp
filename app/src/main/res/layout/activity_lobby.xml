<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="#f5f8fe"
    tools:context=".Activities.LobbyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8f9295"
                android:textStyle="bold"
                android:id="@+id/txtWelcome"
                android:textSize="15dp"
                android:text="Bienvenido, Wilmer" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:textColor="#0f1e5d"
                android:textStyle="bold"
                android:text="Tus servicios" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/layout_image_profile">
            <TextView
                android:id="@+id/logoLetter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="W" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/layout_bg_input"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtSearchCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:background="@null"
            android:inputType="textPersonName"
            android:hint="Specialidad o categoria" />

        <Button
            android:id="@+id/btnSearchByName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_image_profile"
            android:text="Search"
            android:textColor="#ffffff"
            android:gravity="center"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMisCursos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        tools:listitem="@layout/card_course" />
</LinearLayout>